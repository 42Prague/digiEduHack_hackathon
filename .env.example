# EduScale Engine - Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# REQUIRED: AI Configuration
# ============================================
# Get your API key from: https://featherless.ai
FEATHERLESS_API_KEY=your_api_key_here

# LLM Provider Configuration
# Options: "heuristic" | "ollama" | "featherless" | "openai"
# For hackathon: Use "featherless" with FEATHERLESS_API_KEY
INGESTION_LLM_PROVIDER=featherless
INGESTION_LLM_MODEL=meta-llama/Meta-Llama-3.1-8B-Instruct

# ============================================
# Database Configuration
# ============================================
# In Docker: Use "db" (service name)
# Locally: Use "localhost"
DB_HOST=db
DB_PORT=5432
DB_USER=swx_user
DB_PASSWORD=changeme
DB_NAME=swx_db
DATABASE_TYPE=postgres

# ============================================
# Application Settings
# ============================================
PROJECT_NAME=EduScale Engine
ENVIRONMENT=local
LOG_LEVEL=warning

# ============================================
# API Configuration
# ============================================
ROUTE_PREFIX=/api
API_VERSIONS=v1,v2
DEFAULT_API_VERSION=v1
BACKEND_HOST=http://localhost:8000
FRONTEND_HOST=http://localhost:5173

# ============================================
# CORS Configuration
# ============================================
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
